.my-container
	width 100%
	max-width 1190px
	margin 0 auto
	padding 0 20px
	&-item
		&s
			width 100%
			display flex
			flex-direction: row
			flex-wrap: nowrap
			align-items: flex-start
			justify-content: space-between
		width 49%
		img
			display block
			width 100%
		&-grad
			border-radius: 84px
			padding 80px 45px
			background: #E75B34 linear-gradient(to bottom, #E75B34 0%, #57250A 100%)
		&-for
			min-height 749px
		&-author
			min-height 952px
			padding-bottom: 70px
			margin-bottom: 200px
		&-title
			font-family: D
			font-size: 45px
			text-transform uppercase
			margin-bottom: 20px
			small
				display block
				font-size: 30px
				font-family: C
				font-weight: bold
				text-transform: none
				color #fff
		p
			font-size: 30px
			margin-top: 40px