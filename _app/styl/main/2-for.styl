.my-container
	width 100%
	max-width 1190px
	margin 0 auto
	padding 0 20px
	position relative
	z-index 99
	@media screen and (max-width 991px)
		padding 0 15px
	@media screen and (max-width 560px)
		padding: 0
	&-item
		&s
			width 100%
			display flex
			flex-direction: row
			flex-wrap: nowrap
			align-items: flex-start
			justify-content: space-between
			@media screen and (max-width 991px)
				flex-direction: column
		width 49%
		@media screen and (max-width 991px)
			width 100%
		img
			display block
			width 100%
		&-grad
			border-radius: 84px
			padding 80px 45px
			background: #E75B34 linear-gradient(to bottom, #E75B34 0%, #57250A 100%)
			@media screen and (max-width 1199px)
				padding 50px 40px
				border-radius: 50px
			@media screen and (max-width 560px)
				padding 50px 20px
				border-radius: 20px
				margin-top: -100px
		&-for
			min-height 749px
			@media screen and (max-width 1199px)
				min-height 1px
		&-author
			min-height 952px
			padding-bottom: 70px
			margin-bottom: 200px
			@media screen and (max-width 1199px)
				min-height 1px
				padding-bottom: 50px
			@media screen and (max-width 560px)
				margin-bottom: 70px
		&-title
			font-family: D
			font-size: 45px
			text-transform uppercase
			margin-bottom: 20px
			@media screen and (max-width 1199px)
				font-size: 40px
			@media screen and (max-width 560px)
				font-size: 23px
			small
				display block
				font-size: 30px
				font-family: C
				font-weight: bold
				text-transform: none
				color #fff
				@media screen and (max-width 1199px)
					font-size: 25px
				@media screen and (max-width 560px)
					font-size: 20px
		p
			font-size: 30px
			margin-top: 40px
			@media screen and (max-width 1199px)
				font-size: 25px
			@media screen and (max-width 560px)
				font-size: 20px