#main
	padding 150px 0 0
	height: 1450px
	position relative
	@media screen and (max-width 1199px)
		padding 100px 0 200px
		height: auto
		min-height 700px
	@media screen and (max-width 991px)
		min-height 1px
	@media screen and (max-width 560px)
		padding 60px 0 280px
.main-video
	position absolute
	top -100px
	display block
	z-index 0
	left 0
	right 0
	bottom: 0
	margin 0 auto
	min-width: 100%;
	min-height: 100%;
	width: auto;
	height: auto;
.main-title
	font-family: D
	font-size: 70px
	text-align center
	text-transform uppercase
	@media screen and (max-width 1199px)
		font-size: 50px
	@media screen and (max-width 767px)
		font-size: 43px
	@media screen and (max-width 560px)
		font-size: 28px
	@media screen and (max-width 386px)
		font-size: 23px
.main-text
	font-size: 30px
	margin 40px 0
	@media screen and (max-width 1199px)
		font-size: 25px
	@media screen and (max-width 560px)
		font-size: 20px
		margin 30px 0
.button-main
	display inline-block
	width 100%
	max-width 440px
	padding 21px 50px
	background: url(../img/backs/button.png) no-repeat center
	background-size: 100% 100%
	font-size: 32px
	font-weight: 900
	color #fff
	position relative
	@media screen and (max-width 560px)
		font-size: 24px
		padding 20px 30px
		text-align center
		max-width 282px
		background-image: url(../img/backs/button-mob.png)
		&-img
			display none
	&:focus
	&:hover
		color #fff