#main
	padding 150px 0 0
	height: 1450px
	position relative
.main-video
	position absolute
	top -100px
	display block
	z-index 0
	left 0
	right 0
	bottom: 0
	margin 0 auto
	min-width: 100%;
	min-height: 100%;
	width: auto;
	height: auto;
.main-title
	font-family: D
	font-size: 70px
	text-align center
	text-transform uppercase
.main-text
	font-size: 30px
	margin 40px 0
.button-main
	display inline-block
	width 100%
	max-width 440px
	padding 21px 50px
	background: url(../img/backs/button.png) no-repeat center
	background-size: 100% 100%
	font-size: 32px
	font-weight: 900
	color #fff
	position relative
	&:focus
	&:hover
		color #fff