#format
	padding 200px 0 150px
	@media screen and (max-width 1199px)
		padding 100px 0
	@media screen and (max-width 560px)
		padding 60px 0
.format-item
	margin-bottom: 60px
	@media screen and (max-width 560px)
		margin-bottom: 30px
	&-title
		font-size: 32px
		font-weight: bold
		margin-bottom: 10px
		text-transform uppercase
		@media screen and (max-width 560px)
			font-size: 20px
			margin-bottom: 0
	&-text
		font-size: 28px
		@media screen and (max-width 560px)
			font-size: 20px