.price
	&s
		display flex
		flex-direction: row
		flex-wrap: nowrap
		align-items: flex-start
		justify-content: space-between
		@media screen and (max-width 767px)
			flex-direction: column
			justify-content: center
		&-get
			.price
				background: #E75B34 linear-gradient(to bottom, #E75B34 0%, #57250A 100%)
				border-radius: 25px
	color #fff !important
	width 32%
	background: url(../img/backs/price.png) no-repeat center
	background-size: 100% 100%
	padding 30px
	text-align center
	font-size: 40px
	font-weight: bold
	@media screen and (max-width 991px)
		background: none
		border-radius: 25px
		border: 2px solid #E75B34
	@media screen and (max-width 767px)
		width 220px
		margin 0 auto 20px
	@media screen and (max-width 560px)
		width 100%
		max-width 267px
		padding 15px 20px
		display flex
		flex-direction: row
		align-items: center
		justify-content: center
		font-size: 24px
		border-radius: 15px
	p:first-of-type
		position relative
		margin-bottom: 63px
		@media screen and (max-width 560px)
			margin 0 15px 0 0
			padding 0 15px 0 0
			border-right: 3px solid #fff
			line-height: 38px
			
		&:after
			content: ''
			display block
			position absolute
			top auto
			bottom: -30px
			left 0
			right 0
			margin 0 auto
			width 58px
			height: 3px
			background-color: #fff
			@media screen and (max-width 560px)
				content: none
.how-text
	font-size: 30px
	margin-top: 60px
	@media screen and (max-width 1199px)
		font-size: 25px
	@media screen and (max-width 560px)
		font-size: 20px
		margin-top: 45px